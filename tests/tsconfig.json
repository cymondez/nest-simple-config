{
  "extends": "../tsconfig.json",
  "skipLibCheck": true,
  "compilerOptions": {
    "rootDir": "../",
    "strictNullChecks": true,
    "types": ["jest", "node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "**/*.ts",
    "**/*.spec.ts",
    "../src/**/*",
  ],
  "exclude": [
    "../node_modules",
    "../dist"
  ]
}
